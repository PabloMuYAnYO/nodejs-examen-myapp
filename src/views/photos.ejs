<!DOCTYPE html>
<html lang="en">
<head>

  <%- include('./partials/head.ejs') %>
  <!-- Tailwind config for photos.ejs -->
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              coral: '#FF7F50',
              whitesmoke : '#F5F5F5',
              FFC300: '#FFC300'
            }
          }
        }
      }
    </script>
    <title>YourPhotos | Posted Photos!</title>
</head>
<body>
    <%- include('./partials/navigation.ejs') %>
    <div class="bg-white">
        <div class="mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
          <h2 class="text-2xl font-bold tracking-tight text-gray-900">Tus fotos aqu√≠!</h2>
      
          <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">

            <div class="group relative">

              <% for(let i=0; i<fotos.length; i++) {%>
                <div>
                    <p><%= fotos[i].titulo %></p>
                    <img src="<%= fotos[i].url %>">
                    <p><%= fotos[i].fecha %></p>
                    <p><%= fotos[i].descripcion %></p>
                </div>
                <a href="photos/editphoto/<%= fotos[i].id%>">Editar</a>
                <a href="photos/deletephoto/<%= fotos[i].id%>">Borrar</a>
              <% } %>

            </div>
          </div>

        </div>
      </div>
</body>
</html>